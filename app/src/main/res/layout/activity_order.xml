<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBgZiko">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_ziko">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgFood"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_image" />

                        <vn.zikoteam.ziko.customui.CustomEditText
                            android:id="@+id/editNameFood"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:editable="false"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_add"
                            app:font="regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_addfood">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_addfood"
                            android:src="@drawable/ic_dollar" />

                        <vn.zikoteam.ziko.customui.CustomEditText
                            android:id="@+id/editPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:editable="false"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_add"
                            app:font="regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_addfood">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_addfood"
                            android:src="@drawable/ic_locate" />

                        <vn.zikoteam.ziko.customui.CustomEditText
                            android:id="@+id/editLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:editable="false"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:maxLines="2"
                            android:minLines="2"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_add"
                            app:font="regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_addfood">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_addfood"
                            android:src="@drawable/ic_dollar" />

                        <vn.zikoteam.ziko.customui.CustomEditText
                            android:id="@+id/editTax"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:editable="false"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_add"
                            app:font="regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_addfood">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_addfood"
                            android:src="@drawable/ic_dollar" />

                        <vn.zikoteam.ziko.customui.CustomEditText
                            android:id="@+id/editTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:editable="false"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_add"
                            app:font="regular.ttf" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/line_divider" />

                    <vn.zikoteam.ziko.customui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Custommer info"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_normal"
                        app:font="bold.ttf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_addfood">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_addfood"
                            android:src="@drawable/ic_person" />

                        <vn.zikoteam.ziko.customui.CustomEditText
                            android:id="@+id/editNameKh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ellipsize="end"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_add"
                            app:font="regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_addfood">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_addfood"
                            android:src="@drawable/ic_call" />

                        <vn.zikoteam.ziko.customui.CustomEditText
                            android:id="@+id/editPhoneKh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ellipsize="end"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_add"
                            app:font="regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_addfood">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_addfood"
                            android:src="@drawable/ic_location_profile" />

                        <vn.zikoteam.ziko.customui.CustomEditText
                            android:id="@+id/editLocationKh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:maxLines="2"
                            android:minLines="2"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_add"
                            app:font="regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@drawable/bg_button_addshipper"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <vn.zikoteam.ziko.customui.CustomButton
                            android:id="@+id/btnAddShipper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@android:color/white"
                            android:onClick="eventAddShiper"
                            android:text="@string/add_shipper"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_normal"
                            app:font="bold.ttf" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vShipper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_addfood"
                        android:background="@color/colorCompo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgAvatarShipper"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:scaleType="centerCrop" />

                            <vn.zikoteam.ziko.customui.CustomTextView
                                android:id="@+id/tvNameShipper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_normal"
                                app:font="bold.ttf" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center">

            <vn.zikoteam.ziko.customui.CustomButton
                android:id="@+id/btnAddOrder"
                android:layout_width="@dimen/width_login"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_addfood"
                android:background="@drawable/bg_button_primary"
                android:onClick="eventAddOrder"
                android:text="@string/add_order_food"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal"
                app:font="bold.ttf" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pgLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress"/>
</FrameLayout>